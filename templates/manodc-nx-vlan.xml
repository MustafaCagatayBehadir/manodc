<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{switch}</name>
            <config>
                <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                    <vlan-list>
                        <id>{vlan}</id>
                        <?if {description}?>
                            <name>{description}</name>
                        <?else?><!--if {description}-->
                            <name>{name}::VLAN{vlan}</name>
                        <?end?><!--if {description}-->
                    </vlan-list>
                </vlan>
            </config>
        </device>
    </devices>
</config-template>
