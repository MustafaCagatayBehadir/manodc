<config xmlns="http://tail-f.com/ns/config/1.0">
  <bridge-domains xmlns="http://turkcell.com/manodc">
    <bridge-domain-vlan-switch>
      <site>{site}</site>
      <name>{name}</name>
      <vlan>{vlan}</vlan>
      <switch>{$SWITCH}</switch>
      <description>{description}</description>
      <?copy-tree {switch[name=$SWITCH]}?>
      <?if {switch[name=$SWITCH]/switch-type = 'eor' and boolean(layer3)}?>
        <?set-context-node {layer3}?> 
        <layer3>
          <vrf>{vrf}</vrf>
          <address>{$ADDRESS}</address>
          <vip-address>{gateway}</vip-address>
          <vrrpv3-id>{$VRRPV3_ID}</vrrpv3-id>
          <vrrpv3-priority>{$VRRPV3_PRIORITY}</vrrpv3-priority>
        </layer3>
      <?end?><!--if {switch[name=$SWITCH]/switch-type = 'eor'}-->
    </bridge-domain-vlan-switch>
  </bridge-domains>
</config>